
@{
    ViewBag.Title = "Destinations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li id="NewYorkCarousel" data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li id="LondonCarousel" data-target="#myCarousel" data-slide-to="1"></li>
        <li id="DenverCarousel" data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/Destinations/NewYork_1200_800.jpg" />
            <div class="carousel-caption">
                <h2>New York</h2>
                <p>The Big Apple</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/Destinations/London_1200_800.jpg" />
            <div class="carousel-caption">
                <h2 style="color:red;">London</h2>
                <p style="color:red;">Home of "Jack The Ripper"</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/Destinations/Denver_1200_800.jpg" />
            <div class="carousel-caption">
                <h2 style="color:orangered;">Denver</h2>
                <p style="color:orangered;">Snow and Skiing</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

